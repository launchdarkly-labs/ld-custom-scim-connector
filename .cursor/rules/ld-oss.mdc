find . -maxdepth 1 -iname "license*" -o -iname "licence*" && \
echo -e "\n=== Package License Fields ===" && \
(test -f package.json && echo "Node.js:" && cat package.json | jq -r '.license // "none"' || true) && \
(test -f pyproject.toml && echo "Python (pyproject.toml):" && rg "^license" pyproject.toml || true) && \
(test -f setup.py && echo "Python (setup.py):" && rg "license" setup.py || true) && \
(test -f Cargo.toml && echo "Rust:" && rg "^license" Cargo.toml || true) && \
(find . -maxdepth 1 -name "*.gemspec" -exec echo "Ruby:" \; -exec rg "license" {} \; || true)
